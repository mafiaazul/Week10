public class Pizza
    private String topping
    private String size
    private Double price

    public Pizza() {        
    }

    public Pizza(String topping, String size, Double price) {
        this.topping = topping
        this.size = size
        setPrice(price)
    }
    
    public void setTopping(String topping) {
      this.topping = topping
    }

    public String getTopping() {
        return this.topping
    }

    public void setPrice(Double price) {
      this.price = price
    }

    public String getPrice() {
        return this.price
    }

    public void setSize(String size) {
      this.size = size

    public String getPrice() {
        return this.price
    }
  
    public String repeatOrder() {
        return this.size + " " + this.topping + " pizza for $" + this.price
    }
end Pizza Class

---

public class PizzaTester
    public static void main(String[] args)
        
        Pizza myPizza = new Pizza();
        
        myPizza.setTopping("mushroom")
        myPizza.setSize("large")
        myPizza.setPrice(12.99)

        Pizza yourPizza = new Pizza("pepperoni", "extra large", 13.99)

        Sysout(myPizza.repeatOrder())
        Sysout(yourPizza.repeatOrder())
    end
end PizzaTester Class

